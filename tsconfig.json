{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "target": "ES2020",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "esModuleInterop": true,
        "module": "UMD",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "src/*": [
                "src/*"
            ]
        },
    },
    "files": [
        "src/*.ts",
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules/*",
        "src/*.spec.*",
        "src/**/*.spec.*"
    ]
}
