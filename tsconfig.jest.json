{
    "typeAcquisition": {
        "include": [
            "jest"
        ]
    },
    "compilerOptions": {
        "types": [
            "jest",
            "node"
        ]
    },
    "extends": "./tsconfig.json",
    "include": [
        "*.*js",
        "*.*ts",
        "**/*.*ts",
        "**/*.*tsx",
        "**/*.spec.mts"
    ],
    "exclude": [
        "node_modules"
    ]
}
